<head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<h1>User list</h1>
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td>
            <%= link_to 'show', user_path(id: user.id, token: @token),
            :method => :get, :class => "btn btn-success btn-lg" %>
          </td>
          <td>
            <%= link_to 'Edit', edit_user_path(id: user.id, token: @token),
            :class => "btn btn-success btn-lg" %>
          </td>
          <td>
            <%= link_to 'Delete',user_path(id: user.id, token: @token), method: :delete,
            class: 'btn btn-success btn-lg', data: { confirm: 'are you sure' }%>
          </td>
        </tr>
      <% end %>
  </tbody>
</table>
